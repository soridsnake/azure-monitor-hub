      "condition": "[parameters('monitorExistingVMs')]",
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "[format('dcr-association-script-{0}', parameters('deploymentName'))]",
      "location": "[parameters('location')]",
      "kind": "AzurePowerShell",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[format('{0}', variables('managedIdentityId'))]": {}
        }
      },
      "properties": {
        "azPowerShellVersion": "10.0",
        "retentionInterval": "PT1H",
        "timeout": "PT30M",
        "cleanupPreference": "OnSuccess",
        "arguments": "[format('-VMIds \"{0}\" -DCRWindowsId \"{1}\" -DCRLinuxId \"{2}\"', replace(string(parameters('selectedVMIds')), '\"', '\\\"'), resourceId('Microsoft.Insights/dataCollectionRules', parameters('dcrNameWindows')), resourceId('Microsoft.Insights/dataCollectionRules', parameters('dcrNameLinux')))]",
        "scriptContent": "param([string]$VMIds, [string]$DCRWindowsId, [string]$DCRLinuxId)\n\n$ErrorActionPreference = 'Stop'\n\nWrite-Host \"Starting DCR Association Script\"\nWrite-Host \"Waiting 60 seconds for role assignment propagation...\"\nStart-Sleep -Seconds 60\n\nWrite-Host \"VMIds: $VMIds\"\nWrite-Host \"DCR Windows ID: $DCRWindowsId\"\nWrite-Host \"DCR Linux ID: $DCRLinuxId\"\n\n# Parse VM IDs from JSON array string\n$vmArray = $VMIds | ConvertFrom-Json\n\nif ($vmArray.Count -eq 0) {\n    Write-Host \"No VMs to associate\"\n    exit 0\n}\n\n$results = @()\n\nforeach ($vmId in $vmArray) {\n    Write-Host \"Processing VM: $vmId\"\n    \n    # Extract VM info\n    $vmName = $vmId.Split('/')[-1]\n    $vmRG = $vmId.Split('/')[4]\n    $subscriptionId = $vmId.Split('/')[2]\n    \n    Write-Host \"  VM Name: $vmName\"\n    Write-Host \"  Resource Group: $vmRG\"\n    Write-Host \"  Subscription: $subscriptionId\"\n    \n    try {\n        # Get VM to determine OS type\n        $vm = Get-AzVM -ResourceGroupName $vmRG -Name $vmName -ErrorAction Stop\n        \n        # Determine which DCR to use based on OS\n        $dcrId = $DCRWindowsId\n        $osType = \"Windows\"\n        \n        if ($vm.StorageProfile.OsDisk.OsType -eq \"Linux\") {\n            $dcrId = $DCRLinuxId\n            $osType = \"Linux\"\n        }\n        \n        Write-Host \"  OS Type: $osType\"\n        Write-Host \"  Using DCR: $dcrId\"\n        \n        # Create association name\n        $associationName = \"dcr-association-$vmName\"\n        \n        # Create DCR association\n        Write-Host \"  Creating DCR association...\"\n        \n        $association = New-AzDataCollectionRuleAssociation `\n            -TargetResourceId $vmId `\n            -AssociationName $associationName `\n            -DataCollectionRuleId $dcrId `\n            -ErrorAction Stop\n        \n        Write-Host \"  ✅ Successfully associated DCR with $vmName\" -ForegroundColor Green\n        \n        $results += @{\n            VMName = $vmName\n            Status = \"Success\"\n            OSType = $osType\n            DCRId = $dcrId\n        }\n    }\n    catch {\n        Write-Host \"  ❌ Failed to associate DCR with $vmName : $_\" -ForegroundColor Red\n        \n        $results += @{\n            VMName = $vmName\n            Status = \"Failed\"\n            Error = $_.Exception.Message\n        }\n    }\n}\n\nWrite-Host \"`nDCR Association Summary:\"\n$results | ForEach-Object {\n    Write-Host \"  - $($_.VMName): $($_.Status)\"\n}\n\n$DeploymentScriptOutputs = @{}\n$DeploymentScriptOutputs['results'] = $results | ConvertTo-Json -Compress\n"
      },
      "dependsOn": [
